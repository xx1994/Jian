<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.xx.jian.view.card.CardSlidePanel
        android:id="@+id/image_slide_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:bottomMarginTop="@dimen/base25dp"
        card:itemMarginTop="@dimen/base15dp"
        card:yOffsetStep="@dimen/base25dp">

        <LinearLayout
            android:id="@+id/card_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/card_left_btn"
                android:layout_width="@dimen/base70dp"
                android:layout_height="@dimen/base70dp"
                android:background="@drawable/ignore_button" />

            <Button
                android:id="@+id/card_right_btn"
                android:layout_width="@dimen/base70dp"
                android:layout_height="@dimen/base70dp"
                android:layout_marginLeft="@dimen/base60dp"
                android:background="@drawable/like_button" />
        </LinearLayout>

        <com.xx.jian.view.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.xx.jian.view.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.xx.jian.view.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.xx.jian.view.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.xx.jian.view.card.CardSlidePanel>

</LinearLayout>