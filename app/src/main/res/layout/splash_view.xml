<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_img" />

    <FrameLayout
        android:id="@+id/splash_text_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base70dp"
        android:layout_alignParentBottom="true"
        android:background="#7f000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/splash_text_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简"
                android:textColor="#ffffff"
                android:textSize="@dimen/base40dp" />

            <TextView
                android:id="@+id/splash_text_dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/base10dp"
                android:paddingRight="@dimen/base10dp"
                android:text="·"
                android:textColor="#ffffff"
                android:textSize="@dimen/base40dp" />

            <TextView
                android:id="@+id/splash_text_ji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忆"
                android:textColor="#ffffff"
                android:textSize="@dimen/base40dp" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>