<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/base200dp"
             android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/story_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/halfer_transparent"
        android:minHeight="@dimen/base55dp">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base10dp"
            android:lineSpacingMultiplier="1.1"
            android:paddingLeft="@dimen/base10dp"
            android:paddingRight="@dimen/base10dp"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/base18dp"/>
    </FrameLayout>

</FrameLayout>
