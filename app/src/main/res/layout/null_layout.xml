<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/null_img"
        android:layout_width="@dimen/base100dp"
        android:layout_height="@dimen/base100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/null_logo" />

    <TextView
        android:id="@+id/null_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/null_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base20dp"
        android:text="快去添加记忆碎片吧"
        android:textColor="#CBCBCB"
        android:textSize="@dimen/base17dp" />

</RelativeLayout>